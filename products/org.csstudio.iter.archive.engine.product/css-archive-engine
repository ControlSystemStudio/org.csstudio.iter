. codacenv

CONFIGURATION=()
VARFILES=()

unset REQUSER
DAEMONS=(/usr/bin/archive-engine)
NAMES=("CSS Archive Engine")
ENGINE=$(sed -n 's/org.csstudio.archive\/engine=//p' "${CODAC_CONF}/default/css" 2> /dev/null)
ARGS=("-engine ${ENGINE:-CODAC} $(printf "'%s' " "${@:2}")")

. $CODAC_ROOT/bin/services/service-startup
