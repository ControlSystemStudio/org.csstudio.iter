< envPaths
< envSystem
< envUser

cd "${TOP}"

#############################################
## Register all support components         ##
#############################################

dbLoadDatabase "dbd/CTRL-SUP.dbd"
CTRL_SUP_registerRecordDeviceDriver pdbbase

< "${TOP}/iocBoot/iocCTRL-SUP-PSH0CORE/sddPreDriverConf.cmd"
< "${TOP}/iocBoot/iocCTRL-SUP-PSH0CORE/userPreDriverConf.cmd"
< "${TOP}/iocBoot/iocCTRL-SUP-PSH0CORE/threadSchedulingConf.cmd"
< "${TOP}/iocBoot/iocCTRL-SUP-PSH0CORE/dbToLoad.cmd"
< "${TOP}/iocBoot/iocCTRL-SUP-PSH0CORE/iocCTRL-SUP-PSH0CORE-preSaveRestore.cmd"

#############################################
## IOC Logging                             ##
#############################################
iocLogInit
iocLogPrefix "${STY} : "

#############################################
## IOC initialization                      ##
#############################################
cd "${TOP}/db"
iocInit

< "${TOP}/iocBoot/iocCTRL-SUP-PSH0CORE/iocCTRL-SUP-PSH0CORE-postSaveRestore.cmd"
< "${TOP}/iocBoot/iocCTRL-SUP-PSH0CORE/sddSeqToLoad.cmd"
< "${TOP}/iocBoot/iocCTRL-SUP-PSH0CORE/seqToLoad.cmd"
< "${TOP}/iocBoot/iocCTRL-SUP-PSH0CORE/sddPostDriverConf.cmd"
< "${TOP}/iocBoot/iocCTRL-SUP-PSH0CORE/userPostDriverConf.cmd"


dbl > "${CODAC_VAR}/iocdump/${UNIT_NAME}/${IOC_NAME}-${IOC_BOOT_TIME}.dbl"
dbior > "${CODAC_VAR}/iocdump/${UNIT_NAME}/${IOC_NAME}-${IOC_BOOT_TIME}.dbior"
dbhcr > "${CODAC_VAR}/iocdump/${UNIT_NAME}/${IOC_NAME}-${IOC_BOOT_TIME}.dbhcr"

