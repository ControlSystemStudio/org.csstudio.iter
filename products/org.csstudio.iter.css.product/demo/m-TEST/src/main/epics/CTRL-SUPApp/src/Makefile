TOP=../..

include $(TOP)/configure/CONFIG
#----------------------------------------
#  ADD MACRO DEFINITIONS AFTER THIS LINE

#=============================
# Build the IOC support library

PROD_IOC += CTRL-SUP

# CTRL-SUP.dbd will be created and installed
DBD += CTRL-SUP.dbd

# CTRL-SUP.dbd will be made up from base.dbd and module dbds listed below:
CTRL-SUP_DBD += base.dbd

# CTRL-SUP_registerRecordDeviceDriver.cpp derives from CTRL-SUP.dbd
CTRL-SUP_SRCS += CTRL-SUP_registerRecordDeviceDriver.cpp

# Build the main IOC entry point on workstation OSs.
CTRL-SUP_SRCS_DEFAULT += CTRL-SUPMain.cpp
CTRL-SUP_SRCS_vxWorks += -nil-

#=============================
# Add support for the following uncommented modules:

# # AUTOSAVE
CTRL-SUP_DBD += autosave.dbd
CTRL-SUP_LIBS += autosave

# # IOC Monitor
CTRL-SUP_DBD += iocmon.dbd
CTRL-SUP_LIBS += iocmon

# # System Monitor
CTRL-SUP_DBD += sysmon.dbd
CTRL-SUP_LIBS += sysmon

# # STD
CTRL-SUP_DBD += std.dbd
CTRL-SUP_LIBS += std

# # ASYN
CTRL-SUP_DBD += asyn.dbd 
CTRL-SUP_DBD += drvAsynSerialPort.dbd
CTRL-SUP_DBD += drvAsynIPPort.dbd
CTRL-SUP_LIBS += asyn

-include ../*.snlprog
#=============================

# Finally link to the EPICS Base libraries
CTRL-SUP_LIBS += $(EPICS_BASE_IOC_LIBS)

#=============================

include $(TOP)/configure/RULES
#----------------------------------------
#  ADD RULES AFTER THIS LINE

