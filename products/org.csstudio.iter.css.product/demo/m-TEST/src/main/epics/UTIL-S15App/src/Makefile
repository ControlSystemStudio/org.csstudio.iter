TOP=../..

include $(TOP)/configure/CONFIG
#----------------------------------------
#  ADD MACRO DEFINITIONS AFTER THIS LINE

#=============================
# Build the IOC support library

PROD_IOC += UTIL-S15

# UTIL-S15.dbd will be created and installed
DBD += UTIL-S15.dbd

# UTIL-S15.dbd will be made up from base.dbd and module dbds listed below:
UTIL-S15_DBD += base.dbd

# UTIL-S15_registerRecordDeviceDriver.cpp derives from UTIL-S15.dbd
UTIL-S15_SRCS += UTIL-S15_registerRecordDeviceDriver.cpp

# Build the main IOC entry point on workstation OSs.
UTIL-S15_SRCS_DEFAULT += UTIL-S15Main.cpp
UTIL-S15_SRCS_vxWorks += -nil-

#=============================
# Add support for the following uncommented modules:

# # AUTOSAVE
UTIL-S15_DBD += autosave.dbd
UTIL-S15_LIBS += autosave

# # IOC Monitor
UTIL-S15_DBD += iocmon.dbd
UTIL-S15_LIBS += iocmon

# # System Monitor
UTIL-S15_DBD += sysmon.dbd
UTIL-S15_LIBS += sysmon

# # STD
UTIL-S15_DBD += std.dbd
UTIL-S15_LIBS += std

# # ASYN
UTIL-S15_DBD += asyn.dbd 
UTIL-S15_DBD += drvAsynSerialPort.dbd
UTIL-S15_DBD += drvAsynIPPort.dbd
UTIL-S15_LIBS += asyn

-include ../*.snlprog
#=============================

# Finally link to the EPICS Base libraries
UTIL-S15_LIBS += $(EPICS_BASE_IOC_LIBS)

#=============================

include $(TOP)/configure/RULES
#----------------------------------------
#  ADD RULES AFTER THIS LINE

