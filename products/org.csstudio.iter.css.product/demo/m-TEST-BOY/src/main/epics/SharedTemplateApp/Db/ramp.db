record(calc, "TEST-BOY1:RAMPx$(IOC)$(COUNT)")
{
	field(DESC, "Ramp 0 to 9")
    field(SCAN, "$(SCAN)")
    field(CALC, "A>9?0:A+1")
    field(INPA, "TEST-BOY1:RAMPx$(IOC)$(COUNT)")
    field(EGU,  "V")
    field(PREC, "2")
    field(LOPR, "0")
    field(HOPR, "10")
    field(LOLO, "2")
    field(LLSV, "MAJOR")
    field(LOW, "4")
    field(LSV, "MINOR")
    field(HIGH, "6")
    field(HSV, "MINOR")
    field(HIHI, "8")
    field(HHSV, "MAJOR")
}

record(calc, "TEST-BOY1:OnOffx$(IOC)$(COUNT)")
{
	field(DESC, "Ramp 0 to 1")
    field(SCAN, "$(SCAN)")
    field(CALC, "A=1?0:A+1")
    field(INPA, "TEST-BOY1:OnOffx$(IOC)$(COUNT)")
    field(LOPR, "0")
    field(HOPR, "1")
    field(LOW, "0")
    field(LSV, "MINOR")
    field(HIGH, "1")
    field(HSV, "MAJOR")
}
